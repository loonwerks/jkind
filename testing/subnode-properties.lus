-- This file has one top level property which requires subnode
-- properties in order to prove

node counter() returns (x : int);
var
  lemma : bool;
let
  x = -1 -> 1 + pre x;

  lemma = x >= -1;
  --%PROPERTY lemma;
tel;

node counter2() returns (x : int);
var
  lemma : bool;
let
  x = -1 -> 1 + pre x;

  lemma = x >= -1;
  --%PROPERTY lemma;
tel;

node ten() returns (ten : bool);
let
  ten = counter() >= 10;
tel;

node main() returns (prop : bool);
let
  prop = counter2() < 10 or ten();
  --%PROPERTY prop;
tel;
